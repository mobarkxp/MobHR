@model IEnumerable<Domin.Entities.Department>

@{
    ViewData["Title"] = "Index";
}

 <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6" >
                <h1 class="m-0 text-dark">الاقسام</h1>
              </div><!-- /.col -->
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="#">الرئيسية</a></li>
                  <li class="breadcrumb-item active">كل الاقسام</li>
                  
                </ol>
              </div><!-- /.col -->
            </div><!-- /.row -->
          </div><!-- /.container-fluid -->
        </div>
         <div class="row" >
          <div class="col-lg-3 col-6 " >
            <!-- small box -->
            <div class="small-box bg-info ">
              <div class="inner">
                <h3>@ViewBag.deptnum</h3>

                <p>  عدد الاقسام</p>
              </div>
              <div class="icon">
                <i class="fas fa-users"></i>
              </div>
              <a href="#" class="small-box-footer">المزيد <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6" >
            <!-- small box -->
            <div class="small-box bg-info ">
              <div class="inner">
                <h3>53<sup style="font-size: 20px">%</sup></h3>

                <p> الاقسام النشطة </p>
              </div>
              <div class="icon">
                <i class="fas fa-tree"></i>
              </div>
              <a href="#" class="small-box-footer">المزيد <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6" >
            <!-- small box -->
            <div class="small-box bg-info ">
              <div class="inner">
                <h3>44</h3>

                <p>  الاقسام الموقفة </p>
              </div>
              <div class="icon">
                <i class="fas fa-chart-pie"></i>
              </div>
              <a href="#" class="small-box-footer">المزيد <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6" >
            <!-- small box -->
            <div class="small-box bg-info">
              <div class="inner">
                <h3>150</h3>

                <p>التقارير</p>
              </div>
              <div class="icon">
                <i class="fas fa-user-tie"></i>
              </div>
              <a href="#" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
              </a>
            </div>
          </div>
          <!-- ./col -->
        </div>
<div class="card card-info">
    <div class="card-header ">
       
        <a asp-action="Create" class="btn btn-info text-white d-sm-inline-block "><i class="fa fa-user-plus"></i> إظافة قسم </a> |
        <a asp-action="Create" class="btn btn-info text-white d-sm-inline-block "><i class="fa fa-user-plus"></i>إنشاء وظيفة</a> |
        <a class="btn btn-info text-white d-sm-inline-block rounded-pill "><i class="fa fa-print"></i>  طباعة </a> |
        <a class="btn btn-info text-white d-sm-inline-block "><i class="fa fa-export"></i>  تصدير </a> |

    </div>
    <div class="card-body">
       <table class="table table-hover dataTable">
    <thead>
        <tr>
            <th>
                @Resource.DepartmentName
            </th>
            <th>
                @Resource.Details
            </th>
            <th>
                @Resource.Events
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit text-info"></i></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye text-info"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash text-info"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
</div>


